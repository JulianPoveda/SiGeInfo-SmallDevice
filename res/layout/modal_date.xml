<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <DatePicker
        android:id="@+id/DatePickerCmbFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:calendarViewShown="false" />

    <Button
        android:id="@+id/DatePickerBtnAceptar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DatePickerCmbFecha"
        android:layout_below="@+id/DatePickerCmbFecha"
        android:layout_marginTop="32dp"
        android:text="@string/dp_btn_aceptar" />

    <Button
        android:id="@+id/DatePickerBtnCancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/DatePickerBtnAceptar"
        android:layout_alignBottom="@+id/DatePickerBtnAceptar"
        android:layout_alignRight="@+id/DatePickerCmbFecha"
        android:text="@string/dp_btn_cancelar" />

</RelativeLayout>
