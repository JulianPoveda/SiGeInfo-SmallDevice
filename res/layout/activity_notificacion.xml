<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".FormNotificacion" >

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:weightSum="10">
    	
        <TextView
	        android:id="@+id/NotificacionLblRevision"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="end|center_vertical"
	        android:text="@string/LblNotificacionRevision"
	        android:textSize="@dimen/TextLabelNormal"
		    android:textStyle="bold"
		   	android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
	        android:id="@+id/NotificacionTxtRevision"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="6"
	        android:inputType="text"
	        android:textSize="@dimen/TextLabelNormal"
	        android:textColor="@color/blue" />
 	</LinearLayout>   
  
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:weightSum="10">
   	
        <TextView
	        android:id="@+id/NotificacionLblLectura"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="end|center_vertical"
	        android:text="@string/LblNotificacionLectura"
	        android:textSize="@dimen/TextLabelNormal"
		    android:textStyle="bold"
		   	android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
	        android:id="@+id/NotificacionTxtLectura"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="6"
	        android:inputType="number"
	        android:textSize="@dimen/TextLabelNormal"
	        android:textColor="@color/blue" />
   	</LinearLayout>
    
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:weightSum="10">
   	
        <TextView
	        android:id="@+id/NotificacionLblMedidor"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="end|center_vertical"
	        android:text="@string/NotificacionLblMedidor"
	        android:textSize="@dimen/TextLabelNormal"
		    android:textStyle="bold"
		   	android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
	        android:id="@+id/NotificacionTxtMedidor"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="6"
	        android:inputType="text"
	        android:textSize="@dimen/TextLabelNormal"
	        android:textColor="@color/blue" />
        
   	</LinearLayout>
    
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:weightSum="10">
        
        <TextView
	        android:id="@+id/NotificacionLblPrecinto"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="end|center_vertical"
	        android:text="@string/NotificacionLblPrecinto"
	        android:textSize="@dimen/TextLabelNormal"
		    android:textStyle="bold"
		   	android:textAppearance="?android:attr/textAppearanceMedium" />
   	
        <EditText
	        android:id="@+id/NotificacionTxtPrecinto"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="6"
	        android:inputType="text" 
	        android:textSize="@dimen/TextLabelNormal"
	        android:textColor="@color/blue"/>
   	</LinearLayout>
    
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:weightSum="10">
   	
        <TextView
	        android:id="@+id/NotificacionLblMotivo"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="end|center_vertical"
	        android:text="@string/NotificacionLblMotivo"
	        android:textSize="@dimen/TextLabelNormal"
		    android:textStyle="bold"
		   	android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <Spinner
	        android:id="@+id/NotificacionCmbMotivo"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="6" />
   	</LinearLayout>
    
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:weightSum="10">
	    
        <TextView
	        android:id="@+id/NotificacionLblFecha"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="end|center_vertical"
	        android:text="@string/NotificacionLblFecha"
	        android:textSize="@dimen/TextLabelNormal"
		    android:textStyle="bold"
		   	android:textAppearance="?android:attr/textAppearanceMedium" />
		
		<EditText
	        android:id="@+id/NotificacionTxtFecha"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:inputType="date" 
	        android:textSize="@dimen/TextLabelNormal"
	        android:textColor="@color/blue" />
		
	    <Button
	        android:id="@+id/NotificacionBtnFecha"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:text="@string/NotificacionBtnFecha"
	        android:textSize="@dimen/TextLabelMedium"
		    android:textStyle="bold" />   	
   	</LinearLayout>
    
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:weightSum="10">
	    
        <TextView
	        android:id="@+id/NotificacionLblJornada"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="7"
	        android:gravity="end|center_vertical"
	        android:text="@string/NotificacionLblJornada"
	        android:textSize="@dimen/TextLabelNormal"
		    android:textStyle="bold"
		   	android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <Spinner
	        android:id="@+id/NotificacionCmbJornada"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3" />
   	</LinearLayout>
    
    <TextView
        android:id="@+id/NotificacionLblObservacion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/NotificacionLblObservacion"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/TextLabelNormal"
		android:textStyle="bold"
		android:textAppearance="?android:attr/textAppearanceMedium" />
    
 	<EditText
        android:id="@+id/NotificacionTxtObservacion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:inputType="textMultiLine" />
	
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:orientation="horizontal"
    	android:gravity="center_vertical|center_horizontal"
    	android:weightSum="10">
	    
	    <Button
	        android:id="@+id/NotificacionBtnGuardar"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:text="@string/NotificacionBtnGuardar"
	        android:textSize="@dimen/TextLabelNormal"
			android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>