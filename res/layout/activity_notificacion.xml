<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FormNotificacion" >

    <EditText
        android:id="@+id/NotificacionTxtRevision"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/NotificacionLblRevision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificacionTxtRevision"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/NotificacionTxtRevision"
        android:layout_toLeftOf="@+id/NotificacionTxtRevision"
        android:gravity="right|center_vertical"
        android:text="@string/LblNotificacionRevision"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/NotificacionTxtLectura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NotificacionTxtRevision"
        android:layout_alignRight="@+id/NotificacionTxtRevision"
        android:layout_below="@+id/NotificacionTxtRevision"
        android:inputType="number" />

    <EditText
        android:id="@+id/NotificacionTxtMedidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NotificacionTxtLectura"
        android:layout_alignRight="@+id/NotificacionTxtLectura"
        android:layout_below="@+id/NotificacionTxtLectura"
        android:inputType="text" />

    <EditText
        android:id="@+id/NotificacionTxtPrecinto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NotificacionTxtMedidor"
        android:layout_alignRight="@+id/NotificacionTxtMedidor"
        android:layout_below="@+id/NotificacionTxtMedidor"
        android:inputType="text" />

    <TextView
        android:id="@+id/NotificacionLblLectura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificacionTxtLectura"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/NotificacionLblRevision"
        android:layout_toLeftOf="@+id/NotificacionTxtLectura"
        android:gravity="right|center_vertical"
        android:text="@string/LblNotificacionLectura"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/NotificacionLblMedidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/NotificacionTxtPrecinto"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/NotificacionTxtMedidor"
        android:layout_toLeftOf="@+id/NotificacionTxtMedidor"
        android:gravity="right|center_vertical"
        android:text="@string/NotificacionLblMedidor"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/NotificacionLblPrecinto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificacionTxtPrecinto"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/NotificacionTxtPrecinto"
        android:layout_toLeftOf="@+id/NotificacionTxtPrecinto"
        android:gravity="right|center_vertical"
        android:text="@string/NotificacionLblPrecinto"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/NotificacionCmbMotivo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/NotificacionTxtPrecinto"
        android:layout_toRightOf="@+id/NotificacionLblPrecinto" />

    <TextView
        android:id="@+id/NotificacionLblMotivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificacionCmbMotivo"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/NotificacionLblPrecinto"
        android:layout_below="@+id/NotificacionLblPrecinto"
        android:gravity="right|center_vertical"
        android:text="@string/NotificacionLblMotivo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/NotificacionLblFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificacionTxtFecha"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/NotificacionLblMotivo"
        android:layout_below="@+id/NotificacionLblMotivo"
        android:gravity="right|center_vertical"
        android:text="@string/NotificacionLblFecha"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/NotificacionBtnFecha"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificacionTxtFecha"
        android:layout_alignRight="@+id/NotificacionCmbMotivo"
        android:layout_alignTop="@+id/NotificacionTxtFecha"
        android:text="@string/NotificacionBtnFecha" />

    <EditText
        android:id="@+id/NotificacionTxtFecha"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NotificacionCmbMotivo"
        android:layout_toLeftOf="@+id/NotificacionBtnFecha"
        android:layout_toRightOf="@+id/NotificacionLblFecha"
        android:inputType="date" />

    <Spinner
        android:id="@+id/NotificacionCmbJornada"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/NotificacionLblFecha"
        android:layout_toRightOf="@+id/NotificacionTxtFecha" />

    <TextView
        android:id="@+id/NotificacionLblJornada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NotificacionCmbJornada"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/NotificacionTxtFecha"
        android:layout_alignTop="@+id/NotificacionCmbJornada"
        android:gravity="right|center_vertical"
        android:text="@string/NotificacionLblJornada"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/NotificacionLblObservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/NotificacionCmbJornada"
        android:layout_below="@+id/NotificacionLblJornada"
        android:text="@string/NotificacionLblObservacion"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/NotificacionTxtObservacion"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/NotificacionLblObservacion"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/NotificacionBtnGuardar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NotificacionTxtObservacion"
        android:layout_centerHorizontal="true"
        android:text="@string/NotificacionBtnGuardar" />

</RelativeLayout>